{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kunde</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kunde.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kunde.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ kunde.adresse }}</td>
            </tr>
            <tr>
                <th>Ort</th>
                <td>{{ kunde.ort }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ kunde.telefon }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kunde_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('kunde_edit', { 'id': kunde.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
