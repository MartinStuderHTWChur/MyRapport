{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materialliste</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ materialliste.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ materialliste.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materialliste_index') }}">Back to the list</a>
        </li>
