{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materialliste</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materialliste in materiallistes %}
            <tr>
                <td><a href="{{ path('materialliste_show', { 'id': materialliste.id }) }}">{{ materialliste.id }}</a></td>
                <td>{{ materialliste.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('materialliste_show', { 'id': materialliste.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('materialliste_edit', { 'id': materialliste.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materialliste_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
